<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

        <ImageView
            android:id="@+id/image_message_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_otheruser"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />
        <TextView
            android:id="@+id/author_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:text="Mohamed"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/body_field"
            android:text="hi man, how are you?"
            android:background="@drawable/rounded_rectangle_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/author_field"
            app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
        <TextView
            android:id="@+id/message_time"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/body_field"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/body_field"
            android:layout_marginStart="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

